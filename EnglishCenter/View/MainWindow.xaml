<Window x:Class="EnglishCenter.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        Title="English Center Management System" Height="600" Width="1120"
        WindowState="Maximized"  Background="#F9F9F9" Icon="/Resources/ic_apple.png" Activated="mainWindow_activated">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB0D5DC"/>
                    <GradientStop Color="#FF357BC3" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>
            <Image Source="/Resources/logo.png" Width="555"/>
            <DockPanel HorizontalAlignment="Right">
                <Image Source="/Resources/user_black.png" Width="25" Height="25" VerticalAlignment="Bottom" Margin="0 0 0 5"/>
                <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="5 0 0 5" Height="25" VerticalAlignment="Bottom" Name="tb_header_username">admin</TextBlock>
                <Button Style="{StaticResource DropdownButton}" Width="15" Height="15" Foreground="Black" Cursor="Hand"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="2 0 10 10" Name="bt_userInfo" Click="bt_userInfo_click">▼</Button>

                <Popup PlacementTarget="{Binding ElementName=bt_userInfo}"
                        AllowsTransparency="True"  
                        PopupAnimation="Fade"
                        Placement="Bottom" VerticalOffset="10" HorizontalOffset="-280"
                        Name="popup_userInfo" StaysOpen="False">
                    <Grid Background="White" Margin="20" Width="300" Height="120">
                        <Grid.Effect>
                            <DropShadowEffect Color="#FFDEDEDE" BlurRadius="10" Direction="280"/>
                        </Grid.Effect>
                        <Border BorderBrush="#00C0EF" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên đăng nhập: " VerticalAlignment="Center" Margin="10"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Chức vụ: " VerticalAlignment="Center" Margin="10"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10" Name="tb_popupUserInfo_username" FontSize="15"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10" Name="tb_popupUserInfo_permission" FontSize="15"/>

                                <Button Grid.Row="2" Grid.ColumnSpan="2" Name="logout_btn" Click="logout_btn_Click" Content="Đăng xuất" Foreground="White"
                                        HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="2 0 10 5"></Button>
                            </Grid>
                        </Border>
                    </Grid>
                </Popup>
            </DockPanel>
        </DockPanel>
        <TabControl Name="tabControl" Grid.Row="1" SelectedIndex="0">
            <TabItem Name="tabHome">
                <TabItem.Header>
                    <WrapPanel Orientation="Horizontal">
                        <Image Source="/Resources/home.png" Height="30" Width="30"/>
                    </WrapPanel>
                </TabItem.Header>
                <StackPanel Name="tabHome_mainPanel">
                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
