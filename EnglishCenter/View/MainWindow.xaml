                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFB0D5DC"/>
                                <GradientStop Color="#FF6ED9EB" Offset="1"/>
                            </LinearGradientBrush>
