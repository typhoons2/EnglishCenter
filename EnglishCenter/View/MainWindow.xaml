                        </Grid>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>

            <TabItem Name="tabStudents">
                <TabItem.Header>
                    <WrapPanel Orientation="Horizontal">
                        <Image Width="30" Height="30" Source="/Resources/students.png"/>
                        <TextBlock Margin="5">HỌC VIÊN</TextBlock>
                    </WrapPanel>
                </TabItem.Header>

                <Grid Name="tabStudents_mainGrid" Cursor="Arrow">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFB0D5DC"/>
                            <GradientStop Color="#FF6ED9EB" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Width="300" Height="100" Background="White">
                            <Grid.Effect>
                                <DropShadowEffect Color="#FFDCD8D8" ShadowDepth="2"/>
                            </Grid.Effect>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Column="0" Grid.RowSpan="3" Background="#F39C12">
                                <Image Source="/Resources/students_outline.png"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Grid.Row="0" Foreground="Black" FontSize="16" Padding="5">Học viên tiềm năng</TextBlock>
                            <TextBlock Grid.Column="1" Grid.Row="1" Foreground="Black" FontSize="40" Margin="5 0 0 0" Grid.RowSpan="2" Name="tb_numberOfNewStudent">128</TextBlock>
                            <Button Grid.Column="1" Grid.Row="2" Width="20" Height="20" Margin="0 0 5 5" HorizontalAlignment="Right" Padding="0" 
                                            Click="bt_hvtnClick" Content="➞" ToolTip="Hiển thị danh sách học viên tiềm năng"/>
                        </Grid>

                        <Button Grid.Row="1" Width="100" Height="40" 
                                        HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0 -11 0 5" 
                                        ToolTip="Thêm học viên" Name="btn_AddStudent" FontSize="40" Click="btn_AddStudent_Click" Content="+"/>

                        <Grid Grid.Row="2" Width="300" Height="100" Background="White">
                            <Grid.Effect>
                                <DropShadowEffect Color="#FFDCD8D8" ShadowDepth="2"/>
                            </Grid.Effect>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Column="0" Grid.RowSpan="3" Background="#00A65A">
                                <Image Source="/Resources/students.png"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Grid.Row="0" Foreground="Black" FontSize="16" Padding="5">Học viên chính thức</TextBlock>
                            <TextBlock Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Foreground="Black" FontSize="40" Margin="5 0 0 0" Name="tb_numberOfActiveStudent">499</TextBlock>
                            <Button Grid.Column="1" Grid.Row="2" Width="20" Height="20" Margin="0 0 5 5" HorizontalAlignment="Right" Padding="0" 
                                            Click="bt_hvctClick" Content="➞" ToolTip="Hiển thị danh sách học viên chính thức"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.Effect>
                                <DropShadowEffect Color="#FFDCD8D8" ShadowDepth="2"/>
                            </Grid.Effect>
                            <ListView Name="lv_dsHocVien" Background="White" BorderThickness="0" Margin="15 5 10 10" HorizontalContentAlignment="Stretch">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Background="#FFF1F0F0" Margin="5 1 1 1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="100*"/>
                                                <ColumnDefinition Width="50*"/>
                                                <ColumnDefinition Width="50*"/>
                                                <ColumnDefinition Width="50*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,0,10,2" FontSize="15" Name="tb_lv_tenHV" Text="{Binding HocVien.MTenHocVien}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="5 0 5 2" Text="{Binding Lop.MMaLop, StringFormat='Lớp {0}'}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Margin="5,0,10,2" Name="tb_lv_maHV" Text="{Binding HocVien.MMaHocVien}"/>
                                            <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Margin="5 5 10 5" BorderThickness="0" ToolTip="Thu học phí"
                                                            VerticalAlignment="Center" HorizontalAlignment="Center" Name="bt_lv_hocPhiHv" Click="bt_hocPhiHvClick">
                                                <Button.Background>
                                                    <ImageBrush ImageSource="/EnglishCenter;component/Resources/cash.png"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Margin="10 5 5 5" BorderThickness="0" ToolTip="Cập nhật thông tin học viên"
                                                            VerticalAlignment="Center" HorizontalAlignment="Center" Name="bt_lv_editHV" Click="bt_editHvClick">
                                                <Button.Background>
                                                    <ImageBrush ImageSource="/EnglishCenter;component/Resources/edit.png"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" Margin="5 5 10 5" BorderThickness="0" ToolTip="Chi tiết học viên"
                                                            VerticalAlignment="Center" HorizontalAlignment="Center" Name="bt_lv_viewHV" Click="bt_viewHvClick">
                                                <Button.Background>
                                                    <ImageBrush ImageSource="/EnglishCenter;component/Resources/info_white.png"/>
                                                </Button.Background>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Popup PlacementTarget="{Binding ElementName=lv_dsHocVien}"              
                                           AllowsTransparency="True"  
                                           PopupAnimation="Fade"
                                           Placement="Right"
                                           HorizontalOffset="10"
                                           Name="popup_detailHV"
                                           StaysOpen="False">

                                <Grid Background="White" Margin="20">
                                    <Grid.Effect>
                                        <DropShadowEffect Color="#FFC3C3C3" BlurRadius="15" Direction="280"/>
                                    </Grid.Effect>
                                    <Border BorderBrush="#00C0EF" BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <Button Grid.Row="0" Grid.Column="1" Margin="0 0 5 0" Content="⛌" Padding="0" Background="Transparent" HorizontalAlignment="Right"
                                                    Name="bt_popup_close" Width="20" Height="20" Click="bt_popupClick" BorderThickness="0" Foreground="#FFC3C3C3"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Học viên: " Foreground="Black" Margin="5"/>
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Phái: " Foreground="Black" Margin="5"/>
                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Lớp: " Foreground="Black" Margin="5"/>
                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Ngày sinh: " Foreground="Black" Margin="5"/>
                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="SĐT: " Foreground="Black" Margin="5"/>
                                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Email: " Foreground="Black" Margin="5"/>
                                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Địa chỉ: " Foreground="Black" Margin="5"/>

                                            <TextBlock Grid.Row="1" Grid.Column="1" Name="tb_popup_tenHV" Text="Adam Levin Katy Perry" 
