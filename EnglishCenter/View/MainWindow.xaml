                            <GradientStop Color="#FF81DCEB" Offset="1"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="{Binding ElementName=tabHome_mainPanel, Path=ActualHeight}" Cursor="Arrow">
